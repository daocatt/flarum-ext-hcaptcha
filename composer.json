{
    "name": "gtdxyz/flarum-ext-hcaptcha",
    "description": "Add hCaptcha to Flarum.",
    "keywords": [
        "flarum",
        "hCaptcha",
        "antispam",
        "anti-spam",
        "captcha",
        "spam",
        "recaptcha"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8",
        "gtdxyz/hcaptcha": "^1.0"
    },
    "authors": [
        {
            "name": "Dev",
            "email": "dev@dev.gtd.xyz",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/daocatt/flarum-ext-hcaptcha",
        "forum": "https://dev.gtd.xyz"
    },
    "autoload": {
        "psr-4": {
            "Gtdxyz\\HCaptcha\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "flarum-extension": {
            "title": "GTD hCaptcha",
            "category": "feature",
            "icon": {
                "name": "fas fa-hand-paper",
                "backgroundColor": "#00bcbf",
                "color": "#fff"
            },
            "info": {
                "website": "https://dev.gtd.xyz/",
                "support": "https://github.com/daocatt/flarum-ext-hcaptcha/discussions"
            }
        }
    }
}
